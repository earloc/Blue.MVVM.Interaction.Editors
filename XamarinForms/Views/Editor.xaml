<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Blue.MVVM.Interaction.Editors.Views.Editor"
             BackgroundColor="Transparent"
             Title="{Binding Title}">

  <StackLayout x:Name="_Content" Margin="50" BackgroundColor="Black">
      <StackLayout>
        <ContentView x:Name="_ContentView"/>
        <Grid Grid.Row="1">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
          </Grid.ColumnDefinitions>
          <Button Grid.Column="0" x:Name="_PrimaryButton" Text="Ok" Command="{Binding PrimaryCommand}"/>
          <Button Grid.Column="1" x:Name="_SecondaryButton" Text="Cancel" Command="{Binding SecondaryCommand}"/>
        </Grid>
      </StackLayout>
  </StackLayout>
</ContentPage>